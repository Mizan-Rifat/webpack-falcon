mixin CardToDoListManagement
  .card&attributes(attributes)
    .card-header
      h6.mb-0 To Do List
         
    .card-body.py-0.scrollbar.to-do-list-body-height
      each item, index in todoList
        +TodoItem(item,index)
      
    .card-footer.bg-light.p-0
      a.btn.btn-sm.btn-link.d-block.py-2(href=`#!`)
        span.fas.fa-plus.me-1.fs--2
        | Add New Task

mixin TodoItem(item,index)
  .row.border-top.hover-actions-trigger.btn-reveal-trigger(class = index===todoList.length-1 && `border-bottom`)
    .col
      .form-check.mb-0.d-flex.align-items-center
        input.form-check-input.rounded-circle.form-check-line-through.p-2(type="checkbox" id=`checkbox-todo-${index}` class= `form-check-input-${item.color}`)
        label.form-check-label.mb-0.p-3(for=`checkbox-todo-${index}`)=item.task
          //- span.fw-normal.font-base  #{item.task} 
    .col-auto.d-flex.align-items-center
      .hover-actions(style='right:3.25rem;')
        .icon-item.rounded-3.me-2.fs--2.icon-item-sm
          span.fas.fa-clock
        .icon-item.rounded-3.me-2.fs--2.icon-item-sm
          span.fas.fa-user-plus 
      +DashboardDropdown(`management-to-do-list-${index}`, 'sm').transition-none
    